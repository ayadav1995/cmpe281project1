<!-- include header -->

<%- include('partial/_header')%>

<!-- /include header -->

       <main id="site-main">

        <div class="container">
            <div class="container">
                <div class="text-center">
                    <h1 class="nav-brand text-dark"> Welcome <%= userName %> </h1>   
                </div>
           </div>
    <div class="container">
       
     <!-- form handling -->
     <form action="/upload" method="POST" id=add_user enctype="multipart/form-data" >
        <!-- adding code for viewin users and their files -->
        <table class="table">
            <thead class ="thead-dark">
                <tr>
                    <th>FileName</th>
                    <th>uploadDate</th>
                    <th>filesize</th>
                    <th>update</th>
                    <th>delete</th>
                    <th>Download link</th>
                </tr>

            </thead>
            <tbody>
                <% filesToDisplay.forEach( function (files { %>
             <tr>
                <td><%= files.fileName %></td>
                <td><%= files.fileUrl %></td>
                <td><%= files.modifiedDate %></td>
                <td> <a href="#" class="btn border-shadow update">
                    <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                </a></td>
                <td> <a href="#" class="btn border-shadow update">
                    <span class="text-gradient"><i class="fas fa-times"></i></span>
                </a></td>
                <td> <a href="#" class="btn border-shadow update">
                    <span class="text-gradient"><i class="fas fa-download"></i></span>
                </a></td>
             </tr>
             <%  }) %>
            </tbody>
        </table>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Upload New File</button>
        </div>

        <div class="form-group">
            <input type="file" name="image" value="" placeholder=""></input>
        </div>
        
        </form>
        
      </div>
     
    </main>
    
<!-- include footer -->

<%- include('partial/_footer')%>

<!-- /include footer -->