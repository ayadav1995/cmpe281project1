        <form action="" method="" id=add_user enctype="multipart/form-data" >
            
            <!-- adding code for viewin users and their files -->
            <table class="table">
                <thead class ="thead-dark">
                    <tr>
                        <th>UserName</th>
                        <th>Email</th>
                        <!-- <th>update</th>
                        <th>delete</th>
