        <form action="/update" method="POST" id=add_user enctype="multipart/form-data" >
            
        <!-- adding code for viewin users and their files -->
        <table class="table">
            <thead class ="thead-dark">
                <tr>
                    <th>FileName</th>
                    <th>Link</th>
                    <th>user</th>
                    <th>email</th>
                    <!-- <th>update</th> -->
                    <th>delete</th>
                    <th>Download link</th>
                </tr>

            </thead>
            <tbody>
                <% filesToDisplay.forEach(function(files){ %>
             <tr>
                <!-- <input type="text" name="test2" id=""></input> -->
                <!-- <hidden name="fileName" value=''> -->
                <td ><%= files.fileName %></td>
                <td ><%= files.fileUrl %></td>
                <td><%= files.user %></td>
                <td><%= files.email %></td>
                <!-- <td>
                    <div class="form-group">
                    <input type="file" name="image" value="" placeholder=""></input>
                </div> -->
                </td>
                <td> <a href="/delete?url=<%= files.fileUrl %>" class="btn border-shadow update">
                    <span class="text-gradient"><i class="fas fa-times"></i></span>
                </a></td>
                <td> <a href="<%= files.fileUrl %>" download=""class="btn border-shadow update">
                    <span class="text-gradient"><i class="fas fa-download"></i></span>
                </a></td>
             </tr>
             <%  }) %>
                </tbody>
            </table>
        </form>

        <form action="/upload" method="POST" id=add_user enctype="multipart/form-data" >
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Upload New File</button>
        </div>

        <div class="form-group">
            <input type="file" name="image" value="" placeholder=""></input>
        </div>
        
        </form>
        
      </div>
     
